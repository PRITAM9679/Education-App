<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Courses">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ed" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Courses"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="406dp"
        android:layout_height="485dp"
        android:fadeScrollbars="true"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="427dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:onClick="C"
                app:srcCompat="@drawable/img" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="427dp"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:onClick="python"
                app:srcCompat="@drawable/img_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="427dp"
                android:layout_height="171dp"
                android:layout_weight="1"
                android:onClick="java"
                app:srcCompat="@drawable/img_3" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="427dp"
                android:layout_height="171dp"
                android:layout_weight="1"
                android:onClick="eh"
                app:srcCompat="@drawable/img_7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="427dp"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:onClick="ml"
                app:srcCompat="@drawable/machinel" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="427dp"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:onClick="network"
                app:srcCompat="@drawable/network" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_weight="1"
            android:orientation="horizontal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>